
<div class="back-col">
  <div class="parallax banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path 'succulent.jpg' %>);" ></div>

    <div class="fundo">
      <div class="search">
          <%= form_with url: plants_path, method: :get, class: "d-flex " do %>
            <%= text_field_tag :query,
              params[:query],
              class: "form-control rounded-field",
              placeholder: "Encontre uma planta..."
            %>
            <%= submit_tag "Search", class: "btn btn-success btn-my-search" %>
          <% end %>
      </div>


  <div class="grid-card">
    <% @plants.each do |plant| %>
      <div class="plant-card">
        <a href="<%=plant_path(plant)%>">
          <%= image_tag plant.img_url , width: 150, height: 150, alt: plant.name %>
        </a>
        <h5 class="name-plant"><strong><%= plant.name %></strong></h5>
      </div>
    <% end %>
  </div>
</div>
