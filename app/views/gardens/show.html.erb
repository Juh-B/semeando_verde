<div class="back-col">
  <div class="parallax banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path 'succulent.jpg' %>);" >
    <%= turbo_frame_tag dom_id(@garden) do %>
      <h1 class='text-center'><strong><%= link_to @garden.name, edit_garden_path(@garden) %></strong></h1>
    <% end %>
  </div>


  <div class= "plants container">
    <% @garden_plants.each do |garden_plant| %>
      <div class="card-product">
        <%= link_to garden_plant_path(garden_plant) do %>

          <h5 class="text-center"><strong><%= garden_plant.plant.name %></strong></h5>
          <img src=<%= garden_plant.plant.img_url %> >

          <div class="card-content">
            <div class="card-flex">
              <%# Iluminação da planta %>
              <p><i class="fa-solid fa-sun"></i>
              <% if garden_plant.plant.lighting.include?("pleno") %>
                Sol | meia sombra</p>
              <% else %>
                Indireta</p>
              <% end %>
              <%# Regar - planta %>
              <p><i class="fa-solid fa-droplet"></i> 1x por semana</p>
              <%# Toxica ou não %>
              <% if garden_plant.plant.toxic == false %>
                <p><i class="fa-solid fa-dog"></i> Não tóxica</p>
              <% else %>
                <p><i class="fa-solid fa-skull-crossbones"></i> Tóxica</p>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
