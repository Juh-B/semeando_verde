<div class="back-col">
  <%= turbo_frame_tag dom_id(@garden) do %>
    <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.photo.attached? ? cl_image_path(@garden.photo.key) : asset_path('succulent.jpg') %>);" >
      <h1 class='text-center'><strong><%= link_to @garden.name, edit_garden_path(@garden, field: "name") %></strong></h1>

      <%= link_to "Editar Foto", edit_garden_path(@garden, field: "photo"), class:"btn btn-primary" %>
    </div>
  <% end %>


  <div class= "plants container">
    <% @garden_plants.each do |garden_plant| %>

      <%= link_to garden_plant_path(garden_plant), class:"link-card-plant" do %>

        <div class="card-product">
          <h5 class="card-title mb-2"><strong><%= garden_plant.plant.name %></strong></h5>
          <div class="card-content">
            <% if garden_plant.photo.present? %>
              <%= cl_image_tag garden_plant.photo.key, width: 400, height: 300, crop: :fit, class:"img-ban" %>
            <% else %>
              <img src=<%= garden_plant.plant.img_url %> class="img-ban">
            <% end %>

            <div class="d-flex flex-column">
            <p><i class="fa-solid fa-sun"></i>
              <% if garden_plant.plant.lighting.include?("pleno") %>
                  Sol | meia sombra</p>
                <% else %>
                  Indireta</p>
                <% end %>
              <p><i class="fa-solid fa-droplet"></i> 1x por semana</p>
              <% if garden_plant.plant.toxic == false %>
                <p><i class="fa-solid fa-dog"></i> Não tóxica</p>
              <% else %>
                <p><i class="fa-solid fa-skull-crossbones"></i> Tóxica</p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
