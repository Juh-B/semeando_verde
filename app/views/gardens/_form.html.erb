<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @garden.photo.attached? ? cl_image_path(@garden.photo.key) : asset_path('succulent.jpg') %>);" >
  <%= simple_form_for garden, id:"#{dom_id(garden)}_form" do |f| %>
    <% if params[:field] == "photo" %>
      <%= f.input :photo, as: :file, class:"inputs", label: false %>
    <% else %>
      <%= f.input :name, class:"inputs", label: false %>
    <% end %>

    <div class="d-flex justify-content-center w-100">
      <%= f.submit "Salvar", class:"btn-all btn-save garden-submit" %>
      <%= link_to 'Cancelar', garden_path(garden), class: "btn-all btn-delete garden-cancel" %>
    </div>

  <% end %>
</div>
